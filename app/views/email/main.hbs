<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <style type="text/css">
    .wrapper {
      padding: 0px 10px;
      background-color: #f1f1f1;
      border-radius: 5px;
      box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
    }
    .email-header {
      color: #aaa;
    }
    .email-header a {
      color: inherit;
      text-decoration: none;
      font-style: italic;
      font-size: 1.5em;
    }
    .email-footer {
      color: #aaa;
      text-align: right;
    }
    .email-footer a {
      color: inherit;
      text-decoration: none;
      font-style: italic;
    }
    .report-heading {
      background-color: #fff;
      border-bottom: 1px dashed #aaa;
      padding: 0px 20px;
      text-align: center;
      font-size: 2em;
    }
    .report-heading p {
      margin: 0;
    }
    .report-content {
      background-color: #fff;
    }
    .report-content p {
      margin: 0;
      padding: 10px 10px 0px 10px; 
    }
    .report-content p:last-child {
      padding-bottom: 10px; 
    }
  </style>
</head>
<body>
<article class="wrapper">
  {{>header}}
  {{{body}}}
  {{>footer}}
</article>
</body>
</html>