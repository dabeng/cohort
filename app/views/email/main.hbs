<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <style type="text/css">
    .wrapper {
      padding: 0px 10px;
      background-color: #f1f1f1;
      border-radius: 5px;
      box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
    }
    .email-header {
      color: #aaa;
    }
    .email-header a {
      color: inherit;
      text-decoration: none;
      font-style: italic;
      font-size: 1.5em;
    }
    .email-footer {
      color: #aaa;
      text-align: right;
    }
    .email-footer a {
      color: inherit;
      text-decoration: none;
      font-style: italic;
    }
    .report-heading {
      background-color: #fff;
      padding: 0px 20px;
      text-align: center;
      font-size: 2em;
    }
    .report-heading p {
      margin: 0;
      font-size: 2em;
    }
    .report-content {
      background-color: #fff;
    }
    .report-content p {
      margin: 0;
      padding: 10px 10px 0px 10px; 
    }
    .report-content p:last-child {
      padding-bottom: 10px; 
    }
    .fitness-table {
      width:100%;
    }
    .fitness-table td {
      text-align:center;
      border-top: 1px dashed #aaa;
    }
    /* third column */
    .fitness-table tr > td:nth-child(2) {
      font-size: 4em;
      color: #666;
    }
    .fitness-table tr > td:nth-child(3) {
      font-size: 5em;
      font-weight: bold;
      color: #2a8a85;
    }
    .fitness-table tr > td:nth-child(4) {
      font-size: 4em;
      color: #666;
    }
    .fitness-table tr > td:last-child {
      text-align: left;
    }
    .fitness-table th {
      font-size: 1.2em;
    }
    .fitness-table th:nth-child(2) {
      width: 15%;
    }
    .fitness-table th:nth-child(3) {
      width: 15%;
    }
    .fitness-table th:nth-child(4) {
      width: 15%;
    }
    .evaluation-col {
      position: relative;
    }
    .evaluation-col img {
      height: 180px;
    }
    .evaluation-col span {
      position: absolute;
      font-size: 1.5em;
      padding: 0px 10px;
      color: #fff;
      background-color: rgba(0,0,0,0.4);
      bottom: 6px;
      left: 0px;
    }
  </style>
</head>
<body>
<article class="wrapper">
  {{>header}}
  {{{body}}}
  {{>footer}}
</article>
</body>
</html>